<h1>STARDY</h1>
<h3>地球上すべてが勉強場所だ</h3>



<!--
<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
-->
<br>
<% unless signed_in? %>
  <%= link_to "Sign in with Twitter",  user_omniauth_authorize_path(:twitter) %>
  <br>
<% else  %>
  <%= @user.nickname %>
  <section>
  <%= render 'shared/stats' %>
  </section>  
<% end %>

<% unless @active_now.present? %>
  <%= link_to "今すぐ開始" , ssession_path ,class: "btn btn-large btn-primary" %>
<% else %>
  <%= link_to "セッションに戻る", "/studysessions/studying/#{@active_now.id}/#{@active_now.room}" %>
<% end %>

<br>


<% if signed_in? %>
  <%= link_to "ユーザ一覧" , users_path  %>
  
  <div  class="container">
    <table class="table">
      <% @feed_items.each do |studysession|%>
        <tr>
          <td>
            <%= User.find(studysession.user).nickname %>
            <img src="http://images-jp.amazon.com/images/P/<%= studysession.textbook %>.09.TZZZZZZZ.jpg">
            <% if studysession.active %>
              セッションを開始しました！
            <% else %>
              <%= studysession.time %>分のセッションを終了しました。
            <% end %>
            <% if studysession.evaluators_for(:stars).include?(@current_user) %>
              <span style="color:gold;" >
              <%= fa_icon 'star' %>
              </span>
            <% else %>
              <span style="color:lightgray" id="star-icon<%= studysession.id  %>">
              <%= link_to (fa_icon 'star-o'), "/studysessions/like/#{studysession.id}" ,remote:true %>
              </span>
            <% end %>
            <span id="star-sum<%= studysession.id  %>">
              <%= studysession.reputation_for(:stars).to_i %>
            </span>
          </td>
        </tr> 
      <% end  %>
    </table>
  </div>
<% end %>