
<h5><%= @user.nickname %></h5>

<% if @user.skype.present? %>
  <a href="skype:<%= @user.skype %>?call">skype</a>
<% end %>
<section>
  <%= render 'shared/stats' %>
</section>
<% unless current_user.id==@user.id %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  </div>
<% end %>

<% if @user.total_time.present? %>
  <p>セッション:<%= @study_lst.count %>回</p>
  <p>総学習時間:<%= (@user.total_time/60).to_i %>時間</p>
<% end %>

<!-- カレンダー -->
<% if @user.premium.present? %>
<div id="calendar" class="fc-calendar-container"></div>
<script type="text/javascript">
$(document).ready(function() {
    $('#calendar').calendario({
        caldata : codropsEvents    // 表示データ
    });
});
// 表示データ例
var codropsEvents = {
    '11-23-2015' : '<a href="http://tympanus.net/codrops/2012/11/23/three-script-updates/">Three Script Updates</a>',
    '11-01-2015' : 'x',
    <% @daily.each do |key,value| %>
      <% s=key.to_s %>
      <% s=s.split("-") %>
      <%= "\'#{s[1]}-#{s[2]}-#{s[0]}\':\'<div class=\"calender#{value.div(60)}\"><br></div>\',".html_safe %>
    <% end %>
};
</script>
<% end %>

<!-- カード -->  
<% if signed_in? %>
    <% @daily.each do |key,val| %>
      <%= key %>
      :
      <% if val.div(60)>0 %>
        <%= val.div(60) %>時間
      <% end %>
      <%= val.modulo(60) %>分
      <br>
    <% end %>
    <h4>フィード</h4>
    <ul class="collection">
      <% @study_lst.each do |studysession| %>
        <%= render '/feeditem' ,feed_item: studysession %>
      <% end %>
    </ul>

<% end %>
<!--ここまで -->  
