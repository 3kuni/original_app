
<h5><%= @user.nickname %></h5>

<% if @user.skype.present? %>
  <a href="skype:<%= @user.skype %>?call">skype</a>
<% end %>
<section>
  <%= render 'shared/stats' %>
</section>
<% unless current_user.id==@user.id %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  </div>
<% end %>

<% if @user.total_time.present? %>
  <p>セッション:<%= @study_lst.count %>回</p>
  <p>総学習時間:<%= (@user.total_time/60).to_i %>時間</p>
<% end %>

<!-- カレンダー -->
<% if @user.premium.present? %>
<div id="calendar" class="fc-calendar-container"></div>
<script type="text/javascript">
$(document).ready(function() {
    $('#calendar').calendario({
        caldata : codropsEvents    // 表示データ
    });
});
// 表示データ例
var codropsEvents = {
    '11-23-2015' : '<a href="http://tympanus.net/codrops/2012/11/23/three-script-updates/">Three Script Updates</a>',
    '11-01-2015' : 'x',
    <% @daily.each do |key,value| %>
      <% s=key.to_s %>
      <% s=s.split("-") %>
      <% value=value/60%>
      <% if value>10 %>
        <% rank=10 %>
      <% else %>
        <% rank = value %>
      <% end %>
      <%= "\'#{s[1]}-#{s[2]}-#{s[0]}\':\'<div class=\"calender calender#{rank}\"><br></div>\',".html_safe %>
    <% end %>
};
</script>
<% end %>

<!-- カード -->  
<% if signed_in? %>
    <% @daily.each do |key,val| %>
      <%= key %>
      :
      <% if val.div(60)>0 %>
        <%= val.div(60) %>時間
      <% end %>
      <%= val.modulo(60) %>分
      <br>
      <svg xmlns="http://www.w3.org/2000/svg" width="100%" >
        <rect x="0%" y="0" width="96%" height="80" fill="#ffffff" stroke="#eceff1" />
        <rect x="40%" y="0" width="8%" height="80" fill="#ffecb3"  />
        <% for num in 0..24 do %>
          <% x=num*4 %>
          <text class = "svgtext" x="<%= x %>%" y="85" >
          <%= num %>
          </text>
          <line x1="<%= x %>%" y1="80" x2="<%= x %>%" y2="60" stroke="#eceff1" stroke-width="1"/>
        <% end %>
      </svg>
    <% end %>
    <h4>フィード</h4>
    <ul class="collection">
      <% @study_lst.each do |studysession| %>
        <%= render '/feeditem' ,feed_item: studysession %>
      <% end %>
    </ul>

<% end %>



