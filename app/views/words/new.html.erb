<div class="page-header">
  <h1>Words#new</h1>
</div>
<p>Find me in app/views/words/new.html.erb</p>
<% if current_user.premium  %>
	<% @word = Word.new %>
	<%= form_for @word do |f| %>
	  <%= f.text_area :jaword, :placeholder => "日本語" %>
	  <%= f.text_area :enword ,:placeholder => "English" %>
	  <%= f.submit "登録する" %>

	<% end %>
<% end %>